/*mask*/
.drawer_screen { 

  width: 100%;  

  height: 100%;  

  position: fixed;  

  top: 0;  

  left: 0;  

  z-index: 1000;  

  background: #000;  

  opacity: 0.5;  

  overflow: hidden;  

} 

    

/*content*/

.drawer_box { 

  width: 650rpx;  

  overflow: hidden;  

  position: fixed;  

  top: 50%;  

  left: 0;  

  z-index: 1001;  

  /* background: #FAFAFA;   */
  background: white; 

  margin: -150px 50rpx 0 50rpx;  

  border-radius: 15px;  

} 

    

.drawer_title{ 

  padding:15px;  

  font: 20px "microsoft yahei";  

  text-align: center; 
  color: #5e9beb; 

} 

.drawer_content { 

  height: 150px;  

  overflow-y: scroll; /*超出父盒子高度可滚动*/

} 

    
