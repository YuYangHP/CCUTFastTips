/* pages/cart/cart.wxss */
.cart_container {
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
}
.font{
  font-size: 40rpx;
}
.scroll {
  margin-bottom: 120rpx;
}
.column {
  display: flex;
  flex-direction: column;
  width: 200rpx;
}
.fff{
  padding-top: 100px;
}
.nohave{
  padding-left: 300rpx;
  /* margin-top: 400rpx; */
  font-size: 15px;
  color: rgb(112, 109, 109);
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sku {
  width: 150rpx;
  height: 40rpx;
  margin-top: 150rpx;
  margin-left: 130rpx;
  /* border: 1px solid #e6e5e5; */
}
.sku-price {
  color: #5e9beb;
  position: relative;
  margin-top: 70rpx;
}
.price {
  color: red;
  position: relative;
}
.title {
  font-size:30rpx;
  margin-top: 40rpx;
}
.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}
.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
}
.item-allselect {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}
.button-red {
  background-color: #5e9beb; /* 红色 */
}
button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
}
.icons{
  padding-top: 44rpx;
  padding-left: 30rpx;
}
.heji{
  font-size: 17px;
  padding-left: 60rpx;
}